{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": false,
    "lib": ["ES2017", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
